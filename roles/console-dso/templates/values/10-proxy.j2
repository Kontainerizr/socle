{% if dsc.proxy.enabled and dsc.global.offline != true %}
global:
  env:
    HTTP_PROXY: {{ dsc.proxy.http_proxy }}
    HTTPS_PROXY: {{ dsc.proxy.https_proxy }}
    NO_PROXY: {{ dsc.proxy.no_proxy }}
    http_proxy: {{ dsc.proxy.http_proxy }}
    https_proxy: {{ dsc.proxy.https_proxy }}
    no_proxy: {{ dsc.proxy.no_proxy }}
{% endif %}
